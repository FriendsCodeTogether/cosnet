@page "/cosplay/{Id:guid}"
@inject HttpClient Http
@inject IConfiguration Configuration

@if (cosplay == null)
{
   <p><em>Loading...</em></p>
}
else
{
   <table class="table table-dark table-hover mt-4">
      <tbody>
         <tr>
            <td>Pic</td>
            <td>Character: @cosplay.Name <br /> Series: @cosplay.Serie <br /> Status: @cosplay.Status</td>
            <td><br /> @cosplay.DueDate</td>
            <td>Icon</td>
         </tr>
      </tbody>
   </table>
   <div class="container">
      <div class="row">
         <div class="col">Items</div>
         <div class="col">Tasks</div>
         <div class="col">Notes</div>
         <div class="col">Statistics</div>
      </div>
      <div class="row">
         <div class="col">Reference Pics</div>
         <div class="col">Process Pics</div>
         <div class="col">After Pics</div>
         <div class="col">???</div>
      </div>
   </div>
}

@code {
   private CosplayVM cosplay;

   [Parameter]
   public Guid Id { get; set; }

   protected override async Task OnInitializedAsync()
   {
      if (Id != null)
      {
         cosplay = await Http.GetFromJsonAsync<CosplayVM>($"{Configuration.GetSection("CosNetAPIUrl")?.Value}/cosplay/{Id}");
      }
   }
}
