@page "/cosplay/{Id:guid}"
@inject HttpClient Http
@inject IConfiguration Configuration

<table class="table table-dark table-hover mt-4">
   <tbody>
         <tr>
            <td>Pic</td>
            <td>Character: @cosplay.Name <br /> Series: @cosplay.Serie <br /> Status: @cosplay.Status</td>
            <td><br /> @cosplay.DueDate</td>
            <td>Icon</td>
         </tr>
         <tr>
            <div class="grid-container">
               <div class="grid-item">Items</div>
               <div class="grid-item">Tasks</div>
               <div class="grid-item">Notes</div>
               <div class="grid-item">Statistics</div>
               <div class="grid-item">Reference Pics</div>
               <div class="grid-item">Process Pics</div>
               <div class="grid-item">After Pics</div>
               <div class="grid-item">???</div>
            </div>
         </tr>
   </tbody>
</table>


@code {
    private CosplayVM cosplay;

    [Parameter]
    public Guid Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
       if (Id != null)
       {
          cosplay = await Http.GetFromJsonAsync<CosplayVM>($"{Configuration.GetSection("CosNetAPIUrl")?.Value}/cosplay/{Id}");
       }
    }
}
