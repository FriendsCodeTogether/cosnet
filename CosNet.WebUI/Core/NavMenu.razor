
<button class="navbar-toggler" style="display:none;" @onclick="ToggleNavMenu">
    <span class="navbar-toggler-icon"></span>
</button>

<div class="@NavMenuCssClass sidenav-container">
    <NavLink class="sidenav-link" href="" Match="NavLinkMatch.All">Home</NavLink>
    <AuthorizeView>
        <NavLink class="sidenav-link" href="cosplay">My Cosplays</NavLink>
    </AuthorizeView>
</div>

@code {
    private bool collapseNavMenu = false;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
