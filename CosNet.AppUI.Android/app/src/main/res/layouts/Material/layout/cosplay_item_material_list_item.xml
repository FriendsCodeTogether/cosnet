<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/colorPrimaryDark">

  <TextView
    android:id="@+id/MaterialListItemName"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:fontFamily="@font/lato_bold"
    android:text="@string/MaterialNameHint"
    android:textColor="@android:color/background_light"
    android:textSize="20sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/MaterialListItemDescription"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    android:fontFamily="@font/lato_bold"
    android:text="@string/CosplayItemDescriptionHint"
    android:textColor="@android:color/background_light"
    android:textSize="15sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/MaterialListItemPriceLbl"
    app:layout_constraintStart_toStartOf="@+id/MaterialListItemName"
    app:layout_constraintTop_toBottomOf="@+id/MaterialListItemName" />

  <TextView
    android:id="@+id/MaterialListItemPriceLbl"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    android:fontFamily="@font/lato_bold"
    android:text="@string/CosplayItemPrice"
    android:textColor="@android:color/background_light"
    android:textSize="15sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/MaterialListItemPrice"
    app:layout_constraintTop_toBottomOf="@+id/MaterialListItemName"
    app:layout_constraintVertical_bias="0.0" />

  <TextView
    android:id="@+id/MaterialListItemPrice"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:fontFamily="@font/lato_bold"
    android:text="@string/Price_example"
    android:textColor="@android:color/background_light"
    android:textSize="15sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@+id/MaterialListItemPriceLbl" />
</androidx.constraintlayout.widget.ConstraintLayout>
